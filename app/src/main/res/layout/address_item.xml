<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/linearLayout">
        <Button
            android:id="@+id/address_item_choose_btn"
            android:background="@drawable/choose_button"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_width="20dp"
            android:layout_height="20dp"/>
    </LinearLayout>

    <LinearLayout
        android:padding="15dp"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/address_item_address_text"
            android:text=" 收货地址 : "
            android:maxLines="2"
            android:paddingBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/address_item_reciver_text"
            android:text="  收 货 人 : "
            android:paddingBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/address_item_phone_text"
            android:text=" 收货电话 : "
            android:paddingBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <Button
        android:id="@+id/address_item_delete_btn"
        android:text="删除"
        android:textSize="18sp"
        android:layout_gravity="bottom"
        android:textColor="@color/white"
        android:background="@color/red"
        android:layout_width="60dp"
        android:layout_height="match_parent"/>
</LinearLayout>