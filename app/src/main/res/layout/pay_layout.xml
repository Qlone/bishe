<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                tools:context=".controller.PayActivity">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/pay_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>
    <!--遮盖物-->
    <LinearLayout
        android:id="@+id/key_layout"
        android:visibility="gone"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_weight="1"
            android:background="#602b2a2a"
            android:layout_width="match_parent"
            android:layout_height="0dp"/>
        <!--键盘-->
        <LinearLayout
            android:background="@color/darkgray"
            android:orientation="vertical"
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <!--密码显示-->
            <RelativeLayout
                android:background="@color/white"
                android:layout_marginBottom="1px"
                android:layout_weight="3.5"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <TextView
                    android:id="@+id/pay_password0"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/pay_password4"
                    android:layout_centerInParent="true"
                    android:background="@drawable/password_show"
                    android:text="1"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:inputType="numberPassword"
                    android:layout_alignTop="@+id/pay_password0"
                    android:layout_toRightOf="@+id/pay_password0"/>
                <TextView
                    android:id="@+id/pay_password5"
                    android:background="@drawable/password_show"
                    android:text="1"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:inputType="numberPassword"
                    android:layout_alignTop="@+id/pay_password4"
                    android:layout_toRightOf="@+id/pay_password4"/>
                <TextView
                    android:id="@+id/pay_password6"
                    android:background="@drawable/password_show_right"
                    android:text="1"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:inputType="numberPassword"
                    android:layout_alignTop="@+id/pay_password5"
                    android:layout_toRightOf="@+id/pay_password5"/>
                <TextView
                    android:id="@+id/pay_password3"
                    android:background="@drawable/password_show"
                    android:text="1"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:inputType="numberPassword"
                    android:layout_alignTop="@+id/pay_password0"
                    android:layout_toLeftOf="@+id/pay_password0"/>
                <TextView
                    android:id="@+id/pay_password2"
                    android:background="@drawable/password_show"
                    android:text="1"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:inputType="numberPassword"
                    android:layout_alignTop="@+id/pay_password3"
                    android:layout_toLeftOf="@+id/pay_password3"/>
                <TextView
                    android:id="@+id/pay_password1"
                    android:background="@drawable/password_show_left"
                    android:text="1"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:inputType="numberPassword"
                    android:layout_alignTop="@+id/pay_password2"
                    android:layout_toLeftOf="@+id/pay_password2"/>
                <!--提示信息-->
                <TextView
                    android:id="@+id/pay_tips"
                    android:text="提示信息"
                    android:paddingTop="8dp"
                    android:textColor="@color/red"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/pay_password4"
                    android:layout_centerHorizontal="true"/>

            </RelativeLayout>
            <!--第一行-->
            <LinearLayout
                android:background="@color/darkgray"
                android:paddingBottom="1px"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <Button
                    android:id="@+id/pay_key_1"
                    android:background="@drawable/password_bg"
                    style="@style/payPassword"
                    android:layout_marginRight="1px"
                    android:text="1"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>
                <Button
                    android:id="@+id/pay_key_2"
                    android:background="@drawable/password_bg"
                    style="@style/payPassword"
                    android:layout_marginRight="1px"
                    android:text="2"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>
                <Button
                    android:id="@+id/pay_key_3"
                    android:background="@drawable/password_bg"
                    style="@style/payPassword"
                    android:text="3"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>
            </LinearLayout>
            <!--第二行-->
            <LinearLayout
                android:background="@color/darkgray"
                android:paddingBottom="1px"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <Button
                    android:id="@+id/pay_key_4"
                    android:background="@drawable/password_bg"
                    style="@style/payPassword"
                    android:layout_marginRight="1px"
                    android:text="4"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>
                <Button
                    android:id="@+id/pay_key_5"
                    android:background="@drawable/password_bg"
                    style="@style/payPassword"
                    android:layout_marginRight="1px"
                    android:text="5"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>
                <Button
                    android:id="@+id/pay_key_6"
                    android:background="@drawable/password_bg"
                    style="@style/payPassword"
                    android:text="6"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>
            </LinearLayout>
            <!--第三行-->
            <LinearLayout
                android:background="@color/darkgray"
                android:paddingBottom="1px"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <Button
                    android:id="@+id/pay_key_7"
                    android:background="@drawable/password_bg"
                    style="@style/payPassword"
                    android:layout_marginRight="1px"
                    android:text="7"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>
                <Button
                    android:id="@+id/pay_key_8"
                    android:background="@drawable/password_bg"
                    style="@style/payPassword"
                    android:layout_marginRight="1px"
                    android:text="8"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>
                <Button
                    android:id="@+id/pay_key_9"
                    android:background="@drawable/password_bg"
                    style="@style/payPassword"
                    android:text="9"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>
            </LinearLayout>
            <!--第四行-->
            <LinearLayout
                android:background="@color/darkgray"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <Button
                    android:background="#00cccccc"
                    style="@style/payPassword"
                    android:layout_marginRight="1px"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>
                <Button
                    android:id="@+id/pay_key_0"
                    android:background="@drawable/password_bg"
                    android:layout_marginRight="1px"
                    android:text="0"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>
                <ImageButton
                    android:id="@+id/pay_key_delete"
                    android:background="#00cccccc"
                    android:src="@drawable/password_delete_selector"
                    android:scaleType="centerInside"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <com.example.weina.bishe.util.view.GifWaitBg
        android:id="@+id/pay_wait"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </com.example.weina.bishe.util.view.GifWaitBg>

</RelativeLayout>