<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                xmlns:fresco="http://schemas.android.com/apk/res-auto">
    <com.facebook.drawee.view.SimpleDraweeView
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:id="@+id/pay_order_item_img"
        android:background="@drawable/login_wait"
        fresco:placeholderImage="@drawable/login_wait"
        fresco:placeholderImageScaleType="fitXY"
        android:layout_alignParentTop="true"/>
    <!--下面 数量总价 创建时间-->
    <LinearLayout
        android:id="@+id/pay_order_item_downMsg"
        android:layout_below="@id/pay_order_item_img"
        android:padding="1dp"
        android:background="#7acccccc"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/pay_order_item_createTime"
                android:text="创建时间 1999-1-1"
                android:textSize="10sp"
                android:textColor="#9c9c9c"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/pay_order_item_paidTime"
                android:text="支付时间 1999-1-1"
                android:textSize="10sp"
                android:textColor="#9c9c9c"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <TextView
            android:id="@+id/pay_order_item_amount"
            android:text="数量: 2"
            android:textSize="13sp"
            android:gravity="right"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/pay_order_item_totalPrice"
            android:text="总价 $30"
            android:gravity="right"
            android:textSize="15sp"
            android:textColor="@color/goodPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="15dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/pay_order_item_img"
        android:layout_toEndOf="@id/pay_order_item_img"
        android:layout_above="@id/pay_order_item_downMsg">
        <LinearLayout
            android:layout_weight="1.5"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <TextView
                android:id="@+id/pay_order_item_title"
                android:text="title"
                android:layout_weight="1"
                android:textSize="18sp"
                android:singleLine="true"
                android:ellipsize="marquee"
                android:focusable="true"
                android:marqueeRepeatLimit="marquee_forever"
                android:focusableInTouchMode="true"
                android:scrollHorizontally="true"
                android:textStyle="bold"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
            <TextView
                android:id="@+id/pay_order_item_status"
                android:text="status"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <TextView
            android:id="@+id/pay_order_item_address"
            android:text="收货地址"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"/>
        <TextView
            android:id="@+id/pay_order_item_phone"
            android:text="收货手机"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"/>
        <TextView
            android:id="@+id/pay_order_item_reciver"
            android:text="收件人"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"/>
        <LinearLayout
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <Button
                android:id="@+id/pay_order_item_btn_left"
                android:text="按钮1"
                android:background="@drawable/order_edit_btn"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="4dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/pay_order_item_btn_right"
                android:text="按钮2"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="4dp"
                android:background="@drawable/order_edit_btn"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>