<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                xmlns:fresco="http://schemas.android.com/apk/res-auto"
                xmlns:app="http://schemas.android.com/tools">
    <com.facebook.drawee.view.SimpleDraweeView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/order_item_img"
        android:background="@drawable/login_wait"
        app:placeholderImage="@drawable/login_wait"
        fresco:placeholderImage="@drawable/login_wait"
        fresco:placeholderImageScaleType="fitXY"
        />
    <LinearLayout
        android:id="@+id/order_item_downMsg"
        android:layout_below="@id/order_item_img"
        android:padding="1dp"
        android:background="#7acccccc"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/order_item_createTime"
            android:text="创建时间 1999-1-1"
            android:textSize="10sp"
            android:textColor="#9c9c9c"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/order_item_amount"
            android:text="数量: 2"
            android:textSize="13sp"
            android:gravity="right"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/order_item_totalPrice"
            android:text="总价 $30"
            android:gravity="right"
            android:textSize="15sp"
            android:textColor="@color/goodPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:padding="15dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/order_item_img"
        android:layout_toEndOf="@+id/order_item_img"
        android:layout_above="@+id/order_item_downMsg">
        <TextView
            android:id="@+id/order_item_title"
            android:text="title"
            android:layout_weight="2"
            android:textSize="15sp"
            android:maxLines="2"
            android:ellipsize="end"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="0dp"/>
        <TextView
            android:id="@+id/order_item_address"
            android:text="地址 :"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="0dp"/>
        <TextView
            android:id="@+id/order_item_phone"
            android:text="电话 :"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="0dp"/>
    </LinearLayout>
</RelativeLayout>