<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/login_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">
        <Button
            android:id="@+id/register_button_cancle"
            android:text="取消"
            android:textSize="15sp"
            android:textColor="@color/whites"
            android:background="#ffb52b"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/register_button_confirm"
            android:text="注册"
            android:textSize="15sp"
            android:textColor="@color/whites"
            android:background="#ff171f"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"/>
        >
    </LinearLayout>


    <EditText
        android:id="@+id/register_psw2"
        android:hint="请再次输入密码"
        android:background="@drawable/select_text"
        android:layout_centerVertical="true"
        android:singleLine="true"
        android:maxLength="20"
        android:inputType="textPassword"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/register_psw1"
        android:hint="请输入密码"
        android:inputType="textPassword"
        android:singleLine="true"
        android:maxLength="20"
        android:background="@drawable/select_text"
        android:layout_above="@id/register_psw2"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/register_name"
        android:hint="请输入账号"
        android:singleLine="true"
        android:maxLength="20"
        android:background="@drawable/select_text"
        android:layout_above="@id/register_psw1"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/register_tips"
        android:layout_below="@id/register_psw2"
        android:gravity="center"
        android:textSize="16sp"
        android:textColor="@color/red"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <TextView
        android:text="*"
        android:textSize="25sp"
        android:textColor="@color/red"
        android:paddingLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/register_psw2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>
    <TextView
        android:text="*"
        android:textSize="25sp"
        android:textColor="@color/red"
        android:paddingLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/register_psw1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>
    <TextView
        android:text="*"
        android:textSize="25sp"
        android:textColor="@color/red"
        android:paddingLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/register_tips"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>
    <com.example.weina.bishe.util.view.GifWaitBg
        android:id="@+id/register_wait"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </com.example.weina.bishe.util.view.GifWaitBg>
</RelativeLayout>